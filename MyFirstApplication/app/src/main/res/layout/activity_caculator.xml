<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*"
    tools:context=".Caculator"
    >

    <TableRow
        android:layout_marginHorizontal="50dp"
        >

        <EditText
            android:id="@+id/txt_Cal"
            android:layout_width="570dp"
            android:layout_height="100dp"
            android:layout_span="4"
            android:hint="0"
            android:textSize="20dp" />
    </TableRow>
    <TableRow
        android:layout_marginHorizontal="50dp"
        >
        <EditText
            android:id="@+id/txt_secCal"
            android:layout_width="570dp"
            android:layout_height="50dp"
            android:layout_span="4"
            android:hint="0"
            android:textSize="10dp" />
    </TableRow>

    <TableRow>

        <Button
            android:layout_margin="4dp"
            android:text="(" />

        <Button
            android:layout_margin="4dp"
            android:text=")" />

        <Button
            android:layout_margin="4dp"
            android:text="%" />

        <Button
            android:id="@+id/btnAC"
            android:layout_margin="4dp"
            android:text="AC" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/btn7"
            android:layout_margin="4dp"
            android:text="7" />

        <Button
            android:id="@+id/btn8"
            android:layout_margin="4dp"
            android:text="8" />

        <Button
            android:id="@+id/btn9"
            android:layout_margin="4dp"
            android:text="9" />

        <Button
            android:id="@+id/btnDiv"
            android:layout_margin="4dp"
            android:text="/" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/btn4"
            android:layout_margin="4dp"
            android:text="4" />

        <Button
            android:id="@+id/btn5"
            android:layout_margin="4dp"
            android:text="5" />

        <Button
            android:id="@+id/btn6"
            android:layout_margin="4dp"
            android:text="6" />

        <Button
            android:id="@+id/btnMulti"
            android:layout_margin="4dp"
            android:text="*" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/btn1"
            android:layout_margin="4dp"
            android:text="1" />

        <Button
            android:id="@+id/btn2"
            android:layout_margin="4dp"
            android:text="2" />

        <Button
            android:id="@+id/btn3"
            android:layout_margin="4dp"
            android:text="3" />

        <Button
            android:id="@+id/btnSub"
            android:layout_margin="4dp"
            android:text="-" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/btn0"
            android:layout_margin="4dp"
            android:text="0" />

        <Button
            android:id="@+id/btnDot"
            android:layout_margin="4dp"
            android:text="." />

        <Button
            android:id="@+id/btnEqual"
            android:layout_margin="4dp"
            android:text="=" />

        <Button
            android:id="@+id/btnSum"
            android:layout_margin="4dp"
            android:text="+" />
    </TableRow>


</TableLayout>